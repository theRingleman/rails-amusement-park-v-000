<%= form_for @attraction do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label "Height (in inches)" %>
  <%= f.number_field :min_height %>

  <%= f.label "How fun? (1-5)" %>
  <%= f.number_field :happiness_rating %>

  <%= f.label "How sick? (1-5)" %>
  <%= f.number_field :nausea_rating %>

  <%= f.label "How many tickets to ride?" %>
  <%= f.number_field :tickets %>

  <%= f.submit %>
<% end %>
